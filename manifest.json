{
    "manifest_version": 2,
    "name": "Edge Extension V3",
    "version": "1.0",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "*://*/*",
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  