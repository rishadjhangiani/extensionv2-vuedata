{
    "name": "Edge Selector Extension v2",
    "description": "Edge extension to find ProductName, OrderTotal Selectors",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_title": "Selector Extension v2",
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon.png"
        }
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "permissions": [
        "storage",
        "notifications",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "scripting",
        "declarativeNetRequest"
    ],
    "content-scripts": [
        {
            "matches": ["<all_urls"],
            "js": ["content/content.js"]
        }
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}